{
  "compilerOptions": {
    "target": "ES2020",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".", // 프로젝트 루트 디렉토리를 기준으로 설정
    "paths": {
      "@/*": ["src/*"], // src 폴더의 모든 파일을 '@'로 시작하는 alias로 사용
      "@iyulab/template-binding": ["../../packages/template-binding/src/index"],
      "@iyulab/template-binding/*": ["../../packages/template-binding/src/*"]
    }
  },
  "include": ["src"]
}
